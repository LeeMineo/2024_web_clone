<!-- src/main/resources/mappers/ProductMapper.xml -->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.cart.mapper.ProductMapper">
    <select id="getAllProducts" resultType="com.example.cart.model.Product">
        SELECT * FROM products
    </select>

    <select id="getProductById" parameterType="long" resultType="com.example.cart.model.Product">
        SELECT * FROM products WHERE id = #{id}
    </select>

    <insert id="createProduct" parameterType="com.example.cart.model.Product">
        INSERT INTO products (name, description, image, quantity) VALUES (#{name}, #{description}, #{image}, #{quantity})
    </insert>

    <update id="updateProduct" parameterType="com.example.cart.model.Product">
        UPDATE products SET name = #{name}, description = #{description}, image = #{image}, quantity = #{quantity} WHERE id = #{id}
    </update>

    <delete id="deleteProduct" parameterType="long">
        DELETE FROM products WHERE id = #{id}
    </delete>
</mapper>
